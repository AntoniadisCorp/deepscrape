{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "lint:fix": "eslint --fix --ext .js,.ts .",
    "build:angular": "node cp-angular.js",
    "build": "npm run build:angular && tsc",
    "build:watch": "npm run build:angular && tsc --watch",
    "serve": "npm run build && firebase emulators:start --only \"functions,hosting,firestore,auth\" --debug",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only \"functions,hosting\"",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20.x",
    "npm": "10.9.x"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@angular/common": "^19.2.14",
    "@angular/ssr": "^19.2.15",
    "@google-cloud/secret-manager": "^5.6.0",
    "@upstash/redis": "^1.34.3",
    "chalk": "^5.5.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.4.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "morgan": "^1.10.1",
    "rate-limit-redis": "^4.2.2",
    "stripe": "^17.5.0"
  },
  "devDependencies": {
    "@types/morgan": "^1.9.10",
    "@types/stripe": "^8.0.417",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^4.9.0"
  },
  "private": true
}
